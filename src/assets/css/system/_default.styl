@import "_vars.styl"
@import "_animations.styl"

// GENERAL DOCUMENT STYLES

::placeholder
  color: #666

::selection
  background-color: $accent
  color: #fff

input, textarea
  outline: none
  &:focus:required:invalid
    border-color: red
  &:required:valid
    border-color: green

body
  font-family: $newbask
  font-size: $font-size
  min-width: 320px
  position: relative
  line-height: 24px
  overflow-x: hidden
  color: $font-color
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

a
  text-decoration: none
  color: currentColor

  &:active
    outline: none

p
  margin: 0

h1,h2,h3,h4,h5,h6
  margin: 0

ul
  list-style: none
  padding: 0
  margin: 0

*
  box-sizing: border-box

.section
  max-width 1440px
  margin 0 auto

  @media screen and (max-width: 1600px)
    padding: 0 100px

  @media screen and (max-width: 1200px)
    padding: 0 70px

  @media screen and (max-width: 992px)
    padding: 0 50px

  @media screen and (max-width: 768px)
    padding: 0 40px

  @media screen and (max-width: 576px)
    padding: 0 20px
