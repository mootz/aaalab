@import "_vars.styl"
@import "_animations.styl"

// GENERAL DOCUMENT STYLES

::placeholder
  color: #666

::selection
  background-color: $accent
  color: #fff

input, textarea
  outline: none
  &:focus:required:invalid
    border-color: red
  &:required:valid
    border-color: green

body
  font-family: $newbask
  font-size: $font-size
  min-width: 320px
  position: relative
  line-height: 24px
  overflow-x: hidden
  color: $font-color
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

a
  text-decoration: none
  color: currentColor

  &:active
    outline: none

p
  margin: 0

h1,h2,h3,h4,h5,h6
  margin: 0

ul
  list-style: none
  padding: 0
  margin: 0

*
  box-sizing: border-box

.custom-scroll
  &::-webkit-scrollbar
    width: 5px

  &::-webkit-scrollbar-track
    background-color: #F1EBE8

  &::-webkit-scrollbar-thumb
    background-color: $accent

.section
  max-width 1440px
  margin 0 auto
